{
  "name": "react-native-sync-storage",
  "version": "0.1.0",
  "description": "Sync storage with TurboModules",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && cd example/ios && pod install",
    "codegen": "./scripts/generate-turbomodule-cli.sh"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "sync-storage",
    "typescript",
    "turbomodules"
  ],
  "repository": "https://github.com/x0s3/react-native-sync-storage",
  "author": "x0s3 <x0s3.prog@gmail.com> (https://github.com/x0s3)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/x0s3/react-native-sync-storage/issues"
  },
  "homepage": "https://github.com/x0s3/react-native-sync-storage#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.9.3",
    "@react-native-community/eslint-config": "^0.0.7",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "commitlint": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react": "~16.9.0",
    "react-native": "~0.62.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
